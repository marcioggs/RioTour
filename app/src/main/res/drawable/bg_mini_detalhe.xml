        <shape  android:shape="rectangle">
            <solid android:color="@color/app_secondary_transparent" />
            <corners
                android:topRightRadius="14dp"
                android:topLeftRadius="14dp" />
        </shape>
    </item>

    <!-- Painel -->
    <item android:top="5dp">
        <shape  android:shape="rectangle">
            <solid android:color="@color/app_primary_transparent" />
