<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_endereco" />

        <TextView
            android:id="@+id/campo_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Endereço" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_fax" />

        <TextView
            android:id="@+id/campo_fax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(99) 9999-9999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_dialog_email"
            android:tint="@color/blue" />

        <TextView
            android:id="@+id/campo_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="endereco@email.com" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_categoria" />

        <RatingBar
            android:id="@+id/campo_categoria_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            tools:rating="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_categoria" />

        <TextView
            android:id="@+id/campo_categoria_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="Flat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_qtd_acomodacoes_cadeirantes" />

        <TextView
            android:id="@+id/campo_qtd_acomodacoes_cadeirantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_qtd_acomodacoes_cao_guia" />

        <TextView
            android:id="@+id/campo_qtd_acomodacoes_cao_guia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_telefone_para_surdos" />

        <TextView
            android:id="@+id/campo_telefone_para_surdos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(88) 8888-8888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/stat_sys_phone_call"
            android:tint="@color/blue" />

        <TextView
            android:id="@+id/campo_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(77) 7777-7777" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_cnpj" />

        <TextView
            android:id="@+id/campo_cnpj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="63.641.529/0001-04" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campo_idiomas_falados" />

        <TextView
            android:id="@+id/campo_idiomas_falados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Português, Inglês" />
    </LinearLayout>

</LinearLayout>